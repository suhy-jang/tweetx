{
  "name": "tweetx",
  "version": "1.0.0",
  "description": "Twitter clone project",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist",
    "heroku-postbuild": "babel src --out-dir dist --copy-files && NPM_CONFIG_PRODUCTION=false && npm install --prefix client && npm run build --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm start --prefix client",
    "server": "env-cmd -f ./config/dev.env nodemon src --ext js, graphql --exec babel-node --ignore client",
    "seed": "NODE_ENV=development env-cmd -f ./config/dev.env babel-node src --ext js, graphql",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand --notify",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./tests/jest/globalSetup.js",
    "globalTeardown": "./tests/jest/globalTeardown.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suhy-jang/tweetx.git"
  },
  "author": "Suhyeon Jang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suhy-jang/tweetx/issues"
  },
  "homepage": "https://github.com/suhy-jang/tweetx#readme",
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "@sendgrid/mail": "^7.2.3",
    "aws-sdk": "^2.734.0",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.6.5",
    "cross-fetch": "^3.0.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "graphql": "^14.0.2",
    "graphql-yoga": "^1.18.3",
    "helmet": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "prisma-binding": "^2.3.16",
    "subscriptions-transport-ws": "^0.9.17",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "axios": "^0.19.2",
    "concurrently": "^5.2.0",
    "env-cmd": "^10.1.0",
    "graphql-cli": "^3.0.14",
    "graphql-tag": "^2.11.0",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "regenerator-runtime": "^0.13.7"
  }
}
